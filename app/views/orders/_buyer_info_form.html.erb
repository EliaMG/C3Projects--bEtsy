<h2>PAYMENT INFO</h2>

<%= form_for @order, url: checkout_path, html: { role: "form", method: :patch } do |f| %>
  <div class="form-group">
    <%= f.label :buyer_name, "Name" %>
    <%= f.text_field :buyer_name, { class: "form-control", required: true, placeholder: "Your Name" } %>
  </div>
  <div class="form-group">
    <%= f.label :buyer_email, "Email Address" %>
    <%= f.email_field :buyer_email, { class: "form-control", required: true, placeholder: "your_email@example.com" } %>
  </div>
  <div class="form-group">
    <%= f.label :buyer_street, "Street" %>
    <%= f.text_field :buyer_street, { class: "form-control", required: true, placeholder: "101 Knockturn Alley" } %>
  </div>
  <div class="form-group">
    <%= f.label :buyer_city, "City" %>
    <%= f.text_field :buyer_city, { class: "form-control", required: true, placeholder: "London" } %>
  </div>
  <div class="form-group">
    <%= f.label :buyer_state, "State" %>
    <%= f.text_field :buyer_state, { class: "form-control", required: true, placeholder: "WI" } %>
  </div>
  <div class="form-group">
    <%= f.label :buyer_zip, "Zip Code" %>
    <%= f.text_field :buyer_zip, { class: "form-control", required: true, placeholder: "98115" } %>
  </div>
  <div class="form-group">
    <%= f.label :buyer_card_short, "Credit Card Number" %>
    <%= f.text_field :buyer_card_short, { class: "form-control", required: true, placeholder: "1111222233334444" } %>
  </div>
  <div class="form-group">
    <label id="cvv">Credit Card CVV (3-digit security code)</label>
    <input type="number" name="buyer_card_cvv" placeholder="XXX" class="form-control">
  </div>
  <div class="form-group">
    <%= f.label :buyer_card_expiration, "Credit Card Expiration Date" %>
    <%= f.date_field :buyer_card_expiration, { class: "form-control", required: true } %>
  </div>

  <%= f.submit "Submit Order", class: "btn btn-danger" %>
<% end %>

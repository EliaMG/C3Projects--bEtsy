<%= form_for @seller ? [@seller, @product] : @product, html: { class: "form" } do |f| %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control", required: "required" %>
  </div>
  <div class="form-group">
    <%= f.label :price %>
    <%= f.text_field :price, class: "form-control", required: "required", placeholder: "in cents" %>
  </div>
  <div class="form-group">
    <%= f.label :stock %>
    <%= f.text_field :stock, class: "form-control", required: "required" %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :photo_url %>
    <%= f.text_field :photo_url, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :weight %>
    <%= f.text_field :weight, class: "form-control", required: "required", placeholder: "in grams" %>
  </div>
  <div class="form-group">
    <%= f.label :length %>
    <%= f.text_field :length, class: "form-control", required: "required", placeholder: "in centimeters" %>
  </div>
  <div class="form-group">
    <%= f.label :width %>
    <%= f.text_field :width, class: "form-control", required: "required", placeholder: "in centimeters" %>
  </div>
  <div class="form-group">
    <%= f.label :height %>
    <%= f.text_field :height, class: "form-control", required: "required", placeholder: "in centimeters" %>
  </div>

  <%= f.submit "Save", class: "btn btn-warning btn-block no-border-buttons"%>
<% end %>

<div class="page-header">
  <h1>Products <small><%= @seller.username %></small></h1>
  </div>

<div class="row">
<% @seller.products.each do |product| %>
  <div class="col-md-4">
    <div class="thumbnail">
      <div class="product-name">
        <h2><%= product.name %></h2>
      </div>
      <%= link_to image_tag("#{product.photo_url}", class: "img-responsive", size: "100"), product_path(product) %>
      <div class="caption">
        <h3><%= display_dollars(product.price) %></h3>
        <p><%= product_short_description(product) %></p>
        <p>Stock: <%= product.stock %></p>
        <p>Categories: <% product.categories.each do |category| %>
          <%= category.name %>, <!-- # FIXME: This leaves a hanging comma on the last category -->
          <% end %></p>
        <%= link_to "Details", product_path(product), class: "btn btn-default" %>
        <%= link_to "Edit this Product", edit_product_path(product.id), class: "btn btn-info" %>
        <%= link_to retire_product_text(product), retire_product_path(product), method: :patch, class: "btn btn-warning" %>
      </div>
    </div>
  </div>
<% end %>
</div>

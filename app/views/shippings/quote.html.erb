<div class="row">
  <h1>Shipping Options</h1>
</div>
<div class="row">
  <h3>UPS Options</h3>
  <div class="col-md-6">
  <% @ups.each do |option|%>
    <% price = convert_to_money(option[1]) %>
    <% if option[2].nil? %>
      <% date = "No estimate available" %>
    <% else %>
      <% date = option[2].to_date.strftime("%b %d, %Y") %>
    <% end %>

    <%= form_for @shipping, html: {class: "form" } do |f| %>
      <div class="form-group">
        <%= f.label :service_name, "Service: #{option[0]}" %>
        <%= f.hidden_field :service_name, value: option[0] %>
      </div>
      <div class="form-group">
        <%= f.label :price, "Cost: #{price}" %>
        <%= f.hidden_field :price, value: option[1] %>
      </div>
      <div class="form-group">
        <%= f.label :est_date, "Est. Delivery Date: #{date}" %>
        <%= f.hidden_field :est_date, value: option[2] %>
        <%= f.hidden_field :carrier, value: "UPS" %>
      </div>
        <%= f.submit "Select This Option", class: "btn btn-primary no-border-buttons" %>
      </fieldset>
    <% end %>
  <% end %>
  </div>
</div>
<div class="row">
  <div class="col-md-6 col-md-offset-6">
  <h3>FedEx Options</h3>
  <% @fedex.each do |option|%>
    <% price = convert_to_money(option[1]) %>
    <% if option[2].nil? %>
      <% date = "No estimate available" %>
    <% else %>
      <% date = option[2].to_date.strftime("%b %d, %Y") %>
    <% end %>

    <%= form_for @shipping do |f| %>
    <fieldset>
    <div class="form-group">
      <%= f.label :service_name, "Service: #{option[0]}" %>
      <%= f.hidden_field :service_name, value: option[0] %>
    </div>
    <div class="form-group">
      <%= f.label :price, "Cost: #{price}" %>
      <%= f.hidden_field :price, value: option[1] %>
    </div>
    <div class="form-group">
      <%= f.label :est_date, "Est. Delivery Date: #{date}" %>
      <%= f.hidden_field :est_date, value: option[2] %>
      <%= f.hidden_field :carrier, value: "FedEx" %>
    </div>

      <%= f.submit "Select This Option", class: "btn btn-primary no-border-buttons" %>
    </fieldset>
    <% end %>
  <% end %>
  </div>
</div>

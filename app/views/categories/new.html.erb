<div class="row">
  <div class="col-md-12">
    <h2>Add New Category</h2>
    <%= form_for [@seller, @category], html: { class: "form" } do |f| %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control", required: "required" %>
      </div>
      <%= f.submit "Save", class: "btn btn-default"%>
    <% end %>
  </div>
</div>
